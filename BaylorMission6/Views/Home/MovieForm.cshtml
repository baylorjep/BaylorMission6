@{
}

@model Rating

<h1>Rate a Movie</h1>

<form method="post">

    <div>
        <label asp-for="category" for="category">Category:</label>
        <input asp-for="category" type="text" id="category" name="category" required>
    </div>
    <div>
        <label asp-for="title"  for="title">Title:</label>
        <input asp-for="title" type="text" id="title" name="title" required>
    </div>
    <div>
        <label asp-for="year" for="year">Year:</label>
        <input asp-for="year" type="number" id="year" name="year" required>
    </div>
    <div>
        <label asp-for="director" for="director">Director:</label>
        <input asp-for="director" type="text" id="director" name="director" required>
    </div>
    <div>
        <label asp-for="rating" for="rating">Rating:</label>
        <select asp-for="rating" id="rating" name="rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
<div>
        <label asp-for="edited" for="edited">Edited:</label>
        <select asp-for="edited" id="edited" name="edited" required>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    <div>
        <label asp-for="lentTo" for="lentTo">Lent To:</label>
        <input asp-for="lentTo" type="text" id="lentTo" name="lentTo">
    </div>
    <div>
        <label asp-for="notes" for="notes">Notes:</label>
        <textarea asp-for="notes" id="notes" name="notes" rows="4" maxlength="25"></textarea>
    </div>
    <div>
        <button type="submit">Submit Rating</button>
    </div>


</form>